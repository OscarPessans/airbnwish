<div class= "container">
  <div class="banner-show">
    <h1><%=@flat.title%></h1>
    <ul>
    <% @flat.photos.each do |photo| %>
      <li>
        <%= cl_image_tag(photo.key, style: 'height:200px;width:auto;')%>
      </li>
    <% end %>
   </ul>
  </div>
  <div class="details-show">
  <div class="informations-show" >
    <div class="p-2 w-100"><%= @flat.description %></div>
    <h4>Hôte : <%= @flat.owner.firstname%> <%= @flat.owner.lastname%></h4>
    <%= cl_image_tag(@flat.owner.photo.key, style: 'height:200px;width:auto;')%>
    <br>
    <h4>Adresse : <%= @flat.address %></h4>
    <%= link_to "retourner aux annonces", flats_path, class:"retro-button"%>
  </div>
    <div class="p-2 flex-shrink-1">
      <div class="row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <div class="card-body cards-show">
              <h5 class="card-title"><%= @flat.price %>€</h5>
              <p class="card-text mt-3">
                <i class="fa-solid fa-person"></i>
                <%= @flat.size %>
              </p>
              <p class="card-text">
                <i class="fa-solid fa-star"></i>
                <%= @flat.rating %>
              </p>
              <% if @flat.owner != current_user && @flat.available == true %>
                <%= simple_form_for [@flat, @booking] do |f| %>
                <%= f.input :start_date %>
                <%= f.input :end_date %>
                <%= f.submit class: "btn btn-primary" %>
                <% end %>
              <% end %>
            </div>
            <div class="disponible">
                <% if @flat.available %>
                  <p>disponible à la location</p>
                <% else %>
                  <p>loué par</p>
                  <%= @flat.booking.visitor.firstname  %> <%= @flat.booking.visitor.lastname %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
